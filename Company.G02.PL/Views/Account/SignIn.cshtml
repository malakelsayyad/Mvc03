@model SignInDto

@{
	ViewData["Title"] = "SignIn";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">

		<form asp-action="SignIn">

			<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>
			<div class="wthree-text">
				<label class="anim m-2">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SignIn">
			<a asp-action="GoogleLogin">Login with Google</a>
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Create an Account</a></p>
		<p> <a asp-action="ForgetPassword"> Forget Password?</a></p>
	</div>
</div>

@section ValidationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}


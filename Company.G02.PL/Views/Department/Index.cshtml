@model IEnumerable<Department>



@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />
<br />

<a class="btn btn-primary" asp-action="Create" asp-controller="Department">Create Department</a>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            { 
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreatedAt</td>
                    <td>
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
  <div class="mt-4 alert alert-warning">
      <h4>There is no department</h4>
  </div>
}